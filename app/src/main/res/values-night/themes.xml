<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_bg_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Another colors. -->
        <item name="android:statusBarColor">@color/dark_bg_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorBackground">@color/dark_bg_primary</item>
        <item name="colorSurface">@color/dark_bg_secondary</item>
        <item name="colorOnSurface">@color/dark_label_primary</item>
        <item name="labelPrimary">@color/dark_label_primary</item>
        <item name="labelSecondary">@color/dark_label_secondary</item>
        <item name="labelTertiary">@color/dark_label_tertiary</item>
        <item name="labelDisable">@color/dark_label_disable</item>
        <item name="red">@color/dark_red</item>
        <item name="green">@color/dark_green</item>
        <item name="gray">@color/dark_gray</item>
        <item name="grayLight">@color/dark_gray_light</item>
        <item name="blue">@color/dark_blue</item>
        <item name="bgPrimary">@color/dark_bg_primary</item>
        <item name="bgSecondary">@color/dark_bg_secondary</item>
        <item name="bgElevated">@color/dark_bg_elevated</item>
        <item name="separator">@color/dark_separator</item>
        <item name="overlay">@color/dark_overlay</item>
        <!-- Text. -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/labelPrimary</item>
    </style>
</resources>